<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white_16"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_dialog"
        style="@style/Text_24_black_bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginTop="@dimen/dp25"
        android:gravity="center" />

    <TextView
        android:id="@+id/subtitle_dialog"
        style="@style/Text_16_main_gray_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp30"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exit"
        style="@style/PrimaryButtonFilledStyle"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp15"
        tools:text="@string/exit" />

    <TextView
        android:id="@+id/text_view_cancel"
        style="@style/Text_16_main_gray_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp30"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp25"
        android:gravity="center"
        tools:text="Отмена" />
</LinearLayout>